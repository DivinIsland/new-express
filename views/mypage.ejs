  <%- include("./common/foot.ejs") %>
  <script>
    const signoutBtn = el("signoutBtn");
    signoutBtn.addEventListener("click", () => {
      const isTrue = confirm("Are you Sure?");
      if (isTrue) {
        axios.post("/auth/api/signout").then(response => {
          const data = response.data;
          if (data.result === 1) {
            alert(`GoodBye, ${data.name}`);
            window.location.href = "/logout"
          } else {
            alert("Fail to Signout...");
          }
        })
      }
    })
  </script>
</body>

</html>